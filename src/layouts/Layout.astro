---
import Header from '../components/Header.tsx';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Eppendorf Coding Challenge" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="flex flex-col h-full">
			<Header/>
			<slot />
		</div>
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #FFFFFF;
		color: black;
	}

	html, body {
		height: 100%;
		margin: 0;
	}

	main {
		display: flex;
		flex-direction: column;
		flex-grow: 1;
		height: 100%; 
		padding-top: 10px;
		padding-bottom: 10px;
		align-items: center;
		padding-left: 5rem;
		padding-right: 5rem;
	}

	thead th.ascending::after {
    content: '↑';
		gap: 0.5rem;
  }

  thead th.descending::after {
    content: '↓';
		gap: 0.5rem;
	}

	.invalid {
		color: red;
	}

	.valid {
		color: green;
	}
</style>
